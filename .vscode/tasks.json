{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "make",
            "args": [
                "${input:buildVariant}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Run ctest (active build)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${command:cmake.buildDirectory} && ctest --output-on-failure --verbose --progress --no-tests=error"
            ],
            "options": {
                "env": {
                    "CTEST_OUTPUT_ON_FAILURE": "1",
                    "CTEST_COLOR": "ON"
                }
            },
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Run sockact-a",
            "type": "shell",
            "command": "${workspaceFolder}/sockact-example/build/amd64-${input:buildType}/sockact-a/sockact-a",
            "options": {
                "cwd": "${workspaceFolder}/sockact-example/build/amd64-${input:buildType}/sockact-a"
            },
            "problemMatcher": []
        },
        {
            "label": "Run cli",
            "type": "shell",
            "command": "${workspaceFolder}/sockact-example/build/amd64-${input:buildType}/cli/sockact-cli",
            "options": {
                "cwd": "${workspaceFolder}/sockact-example/build/amd64-${input:buildType}/cli"
            },
            "args": ["--socket=/run/sockact-local-a.sock"],
            "problemMatcher": []
        }

    ],
    "inputs": [
        {
            "id": "buildVariant",
            "type": "pickString",
            "description": "Select build variant",
            "options": [
                "amd64-Release",
                "amd64-Debug",
                "amd64-debbuild",
                "arm64-Release",
                "arm64-Debug",
                "arm64-debbuild"
            ],
            "default": "amd64-Release"
        },
    ]
}
